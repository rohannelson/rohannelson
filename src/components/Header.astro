<style>
    :root {
        --header-height: 5rem;
    }
    header {
        display: flex;
        width: 100%;
        /*border-bottom: 2px dotted white;*/
        background-color: var(--theme-background);
        position: fixed;
        top: 0;
        height: var(--header-height);
        justify-content: center;
    }
    div.container {
        max-width: 700px;
        padding: 2rem 2rem 0 2rem;
        width: 100%;
        height: var(--header-height);
        display: flex;
        justify-content: flex-end;
        border-bottom: dotted 1px black;
    }
    div.wrapper > a {
        padding: 0.75rem;
        background: var(--accent-gradient);
        border-radius: 100%;
    }
    nav {
        width: 100%;
    }
    ul {
        display: flex;
        justify-content: flex-end;
        align-items: center;
        margin: 0;
    }
    li {
        list-style: none;
        padding: 0 0.5rem;
    }
    a {
        text-decoration: none;
        color: black;
        padding: 0.5rem 1rem;
        border-radius: 5px;
        font-size: 1.1rem;
        font-weight: 500;
    }
    a:focus,
    a:hover {
        outline: solid 1px black;
        font-weight: 600;
    }
    div.wrapper > a:focus,
    div.wrapper > a:hover {
        outline: solid 1px black;
        transition: 0.25s;
    }
</style>
