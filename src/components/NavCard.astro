---
const { cardURL, cardHeading, cardDescription, cardImage } = Astro.props;
---

<li>
    <a href={cardURL}>
        <img src={cardImage} />
        <h3>{cardHeading}</h3>
        <p>{cardDescription}</p>
    </a>
</li>

<style>
    ul {
        padding: 0;
        margin: 0;
    }
    a {
        text-decoration: none;
        color: black;
        display: block;
        padding: 1rem;
    }
    li {
        list-style: none;
        border: 1px solid black;
        border-radius: 4px;
        margin: 1rem 0;
    }
    li:hover, li:focus {
        transform: scale(102%);
    }
    img {
        height: 80px;
        width: auto;
        float: right;
        margin-left: 1rem;
    }
    h3 {
        margin-top: 0px;
    }
</style>
