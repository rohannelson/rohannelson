---
const { frontmatter } = Astro.props;
const capitalise = (str) => {
    return str.charAt(0).toUpperCase() + str.slice(1);
};
const months = [
    "January",
    "February",
    "March",
    "April",
    "May",
    "June",
    "July",
    "August",
    "September",
    "October",
    "November",
    "December",
];
const date = new Date(frontmatter.pubDate);
const fullDate =
    date.getDate() + " " + months[date.getMonth()] + " " + date.getFullYear();
---

<dl>
    <div>
        <dt><b>Tags:</b></dt>
        {
            frontmatter.tags.map((tag) => {
                let tagURL = `/blog/tags/${tag}`;
                return (
                    <dd>
                        <a href={tagURL}>{capitalise(tag)}</a>
                    </dd>
                );
            })
        }
        <dt class="pub"><b>Published:</b></dt>
        <dd>{fullDate}</dd>
    </div>
    <div>
        <dt><b>Context:</b></dt>
        <dd>{frontmatter.context}</dd>
    </div>
</dl>
<style>
    dl {
        list-style: none;
        padding: 0;
    }
    div {
        display: flex;
        margin-bottom: 1rem;
    }
    dd {
        margin: 0;
        margin-left: 0.5rem;
        font-style: italic;
    }
    dt:not(:first-child) {
        margin-left: 1rem;
    }
</style>
