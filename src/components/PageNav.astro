---
const { page } = Astro.props
---

<div class="mt-4 flex items-center justify-center gap-4">
	{
		page.url.prev ? (
			<a href={page.url.prev} class="p-0 underline">
				Previous page
			</a>
		) : null
	}
	{
		page.lastPage > 1 ? (
			<p class="!m-0 text-base">
				Page {page.currentPage} of {page.lastPage}
			</p>
		) : null
	}
	{
		page.url.next ? (
			<a href={page.url.next} class="p-0 underline">
				Next page
			</a>
		) : null
	}
</div>
