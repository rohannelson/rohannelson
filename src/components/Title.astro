---
const { title, pubDate } = Astro.props
const months = [
	'January',
	'February',
	'March',
	'April',
	'May',
	'June',
	'July',
	'August',
	'September',
	'October',
	'November',
	'December'
]
const date = new Date(pubDate)
const fullDate = date.getDate() + ' ' + months[date.getMonth()] + ' ' + date.getFullYear()
---

<div
	class="titleWrapper relative z-20 -mr-5 ml-[min(calc(var(--margin-width)*-1),var(--margin-min)*-1)] flex min-h-20 w-[max(calc(var(--content-width)+var(--margin-width)+3px),0px)] items-center rounded-r-[--border-radius] bg-gradient-to-r from-dark-red to-light-red lg:mr-0 lg:w-[calc(100%+max(var(--margin-width),var(--margin-min))*2)] lg:overflow-hidden lg:rounded-none"
>
	<h1 class="ml-[max(var(--margin-width),var(--margin-min))] pr-[10px] text-white">
		{title}
	</h1>
	{
		pubDate && (
			<p class=" mb-4 ml-auto mr-[calc(var(--margin-min)-4px)] shrink-0 self-end text-white md:shrink">
				<span class=" font-bold text-white">Published:</span> {fullDate}
			</p>
		)
	}
</div>
<div
	class="stickyBorder sticky top-[--header-height] z-10 -mr-[var(--margin-min)] -mt-5 mb-[calc(2rem+20px)] ml-[min(calc(var(--margin-width)*-1),var(--margin-min)*-1)] h-2 w-[max(calc(var(--content-width)+var(--margin-width)+3px),0px)] rounded-r-[--border-radius] bg-gradient-to-r from-dark-red to-light-red duration-duration lg:mr-0 lg:w-[calc(100%+max(var(--margin-width),var(--margin-min))*2)] lg:overflow-hidden lg:rounded-none"
>
</div>
