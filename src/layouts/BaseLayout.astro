---
import Header from '../components/Header.astro'
import Title from '../components/Title.astro'
import Footer from '../components/Footer.astro'
import '../styles/main.css'
export interface Props {
	title: string
	description: string
}
//@ts-ignore
const { title, description, frontmatter, pubDate } = Astro.props
const pageTitle = title ?? frontmatter.title
const pageDescription = description ?? frontmatter.description
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="apple-touch-icon" sizes="180x180" href="/favicon/apple-touch-icon.png" />
		<link rel="icon" type="image/png" sizes="32x32" href="/favicon/favicon-32x32.png" />
		<link rel="icon" type="image/png" sizes="16x16" href="/favicon/favicon-16x16.png" />
		<link rel="manifest" href="/site.webmanifest" />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Bitter:ital,wght@0,400;0,500;0,700;1,400;1,700&display=swap"
			rel="stylesheet"
		/>
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content={pageDescription} />
		<script
			defer
			src="https://cloud.umami.is/script.js"
			data-website-id="b166f848-ec31-4579-b581-c1892cdb6a95"></script>
		<title>{pageTitle} - rohannelson.com</title>
	</head>
	<body>
		<Header />
		<main>
			<div
				class="mx-[max(var(--margin-width),var(--margin-min))] min-h-[calc(100vh-var(--header-height))] max-w-[--content-width]"
			>
				<Title title={title} pubDate={pubDate} />
				<slot />
			</div>
		</main>
		<Footer />
	</body>
</html>
