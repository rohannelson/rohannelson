---
import Header from "../components/Header.astro";
import Title from "../components/Title.astro";
import GoogleAnalytics from "../components/GoogleAnalytics.astro";
export interface Props {
  title: string;
  description: string;
}
//@ts-ignore
const { title, description, frontmatter } = Astro.props;
const pageTitle = title ?? frontmatter.title;
const pageDescription = description ?? frontmatter.description;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <GoogleAnalytics />
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="apple-touch-icon" sizes="180x180" href="/favicon/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Bitter:ital,wght@0,400;0,500;0,700;1,400;1,700&display=swap"
      rel="stylesheet"
    />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={pageDescription} />
    <title>{pageTitle} - rohannelson.com</title>
  </head>
  <body>
    <Header />
    <main>
      <div class="container">
        <Title title={title} />
        <slot />
      </div>
    </main>
    <style is:global>
      /*SITE-WIDE STYLES*/
      * {
        box-sizing: border-box;
        font-family: "Bitter", serif;
        font-size: 16px;
        color: var(--dark-grey);
        line-height: 26px;
      }
      /*BASIC COLOUR VARIABLES*/
      :root {
        --dark-grey: #52554a;
        --light-grey: #a49694;
        --dark-red: #8c1930;
        --light-red: #ff385c;
        --dark-pink: #67204e;
        --light-pink: #a6337d;
        --dark-purple: #45244f;
        --light-purple: #81488e;
        --dark-blue: #2b4852;
        --light-blue: #5795ae;
        --dark-green: #333a25;
        --light-green: #7c8d59;
        --dark-yellow: #7f572f;
        --light-yellow: #df9f5f;
        --dark-orange: #7d3a21;
        --light-orange: #d06b3f;
      }
      /*COLOUR GRADIENT VARIABLES*/
      :root {
        --grey-gradient: linear-gradient(90deg, var(--dark-grey), 43%, var(--light-grey));
        --red-gradient: linear-gradient(90deg, var(--dark-red), 43%, var(--light-red));
        --red-gradient-diagonal: linear-gradient(
          55deg,
          var(--dark-red),
          43%,
          var(--light-red)
        );
        --pink-gradient-diagonal: linear-gradient(
          55deg,
          var(--dark-pink),
          43%,
          var(--light-pink)
        );
        --purple-gradient-diagonal: linear-gradient(
          55deg,
          var(--dark-purple),
          43%,
          var(--light-purple)
        );
        --blue-gradient-diagonal: linear-gradient(
          55deg,
          var(--dark-blue),
          43%,
          var(--light-blue)
        );
        --green-gradient-diagonal: linear-gradient(
          55deg,
          var(--dark-green),
          43%,
          var(--light-green)
        );
        --yellow-gradient-diagonal: linear-gradient(
          55deg,
          var(--dark-yellow),
          43%,
          var(--light-yellow)
        );
        --orange-gradient-diagonal: linear-gradient(
          55deg,
          var(--dark-orange),
          43%,
          var(--light-orange)
        );
      }
      /*LAYOUT VARIABLES*/
      :root {
        --content-width: 700px;
        --border-radius: 15px;
        --margin-width: calc((100vw - var(--content-width)) / 2);
      }
      /*need to decide on breakpoints and add responsive font-sizing*/
      h1,
      h2,
      h3,
      h4 {
        font-weight: 700;
      }
      h1 {
        font-size: calc(40rem / 16);
        line-height: calc(50rem / 16);
      }
      h2 {
        font-size: calc(28rem / 16);
        line-height: calc(38rem / 16);
      }
      h3 {
        font-size: calc(24rem / 16);
        line-height: calc(34rem / 16);
      }
      h4 {
        font-size: calc(18rem / 16);
        line-height: calc(28rem / 16);
      }
      h2,
      h3,
      h4 {
        margin-bottom: 0.5rem;
      }
      h1 + h2,
      h2 + h3,
      h3 + h4 {
        margin-top: 0px;
      }
      a {
        color: var(--light-red);
      }
      a.tag {
        text-decoration: none;
        color: black;
        padding: 0.25rem 0.5rem;
        border-radius: 5px;
        font-weight: 500;
        border: 1px solid black;
        font-style: italic;
        display: inline-block;
      }
      a.tag:focus,
      a.tag:hover {
        transform: scale(106%);
      }
      li {
        margin-bottom: 0.5rem;
      }
    </style>
    <style>
      div.container {
        max-width: var(--content-width);
        justify-content: center;
        margin: 0 auto;
        min-height: calc(100vh - var(--header-height));
      }
      body {
        margin: 0;
      }
    </style>
  </body>
</html>
