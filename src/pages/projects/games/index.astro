---
import Layout from '../../../layouts/BaseLayout.astro'
import GameCard from '../../../components/GameCard.astro'
const title = 'Board Games App'
const description = 'Learning by doing.'
---

<Layout title={title} description={description}>
	<p class="mb-4">
		Check out these games that I made for fun! If you are <a href="/sign-in">signed in</a> you can
		change the player colours, and stats of how many times you've won will persist and sync
		across&nbsp;devices.
	</p>
	<div class="space-y-10">
		<GameCard
			name="TicTac­Toe"
			slug="tictactoe"
			icon="tictactoe"
			description="The classic game of noughts and crosses – made with React."
			players="2"
			difficulty="easy"
		/>
		<GameCard
			name="Four in a Row"
			slug="four-in-a-row"
			icon="four-in-a-row"
			description="Can you get four in a row? Made with React."
			players="2"
			difficulty="easy"
			colour="green"
		/>
		<GameCard
			name="Checkers (under construction)"
			slug="checkers"
			icon="checkers"
			description="An oldy but a goody. Made with React."
			players="2"
			difficulty="medium"
			colour="blue"
		/>
	</div>
</Layout>
