---
import Layout from "../../layouts/BaseLayout.astro";
import TicTacToe from "./TicTacToe.jsx";
import FourInARow from "./FourInARow.jsx";
import Checkers from "./Checkers.jsx";
const title = "My Web Projects";
const description = "A home for my web experiments";
---

<Layout title={title} description={description}>
  <p>Check out these games that I made with React for fun!</p>
  <TicTacToe client:load />
  <FourInARow client:load />
  <Checkers client:load />
</Layout>
<!-- Games Shared Styling -->
<style is:global>
    .breaker {
    height: 20px;
  }
  .reset {
    padding: 10px;
    border-radius: var(--border-radius);
    color: var(--light-red);
    border: 3px solid var(--light-red);
    background: white;
    font-weight: 700;
    float: right;
  }
  .reset:hover {
    background: var(--light-red);
    color: white;
    cursor: pointer;
  }
</style>
<!-- Tic Tac Toe Styling -->
<style is:global>
  .tictactoe .square {
    background: #fff;
    border: 1px solid #999;
    float: left;
    font-size: 30px;
    font-weight: bold;
    line-height: 34px;
    height: 50px;
    margin-right: -1px;
    margin-top: -1px;
    padding: 0;
    text-align: center;
    width: 50px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .tictactoe .board-row:after {
    clear: both;
    content: "";
    display: table;
  }

  .tictactoe .status {
    margin-bottom: 10px;
    align-self: flex-start;
  }
  .tictactoe .game {
    display: flex;
    flex-direction: row;
  }
  .tictactoe .wrapper {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }
</style>

<!--Four In A Row Styling-->
<style is:global>
  .fiar .circle {
    background: #fff;
    border: 1px solid #999;
    height: 32px;
    padding: 0;
    margin: 1px;
    width: 32px;
    border-radius: 100%;
    float: left;
  }
  .fiar .board {
    height: 210px;
    width: 250px;
    padding: 3px;
    background: red;
    z-index: -1;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 3px;
  }
  .fiar .board-column:after {
    clear: both;
    content: "";
    display: table;
  }
  .fiar .inputWrapper {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 250px;
    padding: 5px;
  }
  .fiar .input {
    width: 31px;
    margin: 1px;
    font-size: 17px;
    padding-bottom: 4px;
  }
  .fiar .circle.green {
    background: greenyellow;
    border: 2px solid black;
  }

  .fiar .circle.blue {
    background: aqua;
    border: 2px solid black;
  }
  .fiar .wrapper {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }
</style>
<!--Checkers Styling-->
<style is:global>
  .checkers .square {
    background: #fff;
    border: 1px solid #999;
    float: left;
    height: 33px;
    margin-right: -1px;
    margin-top: -1px;
    padding: 0;
    text-align: center;
    width: 33px;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .checkers .board-row:after {
    clear: both;
    content: "";
    display: table;
  }
  .blackChecker {
    background-color: black;
    border: 1px solid white;
    height: 90%;
    width: 90%;
    border-radius: 100%;
  }
  .blackCheckerKing {
    border: 3px solid gold;
  }
  .whiteChecker {
    background-color: white;
    border: 1px solid black;
    height: 90%;
    width: 90%;
    border-radius: 100%;
  }
  .whiteCheckerKing {
    border: 3px solid gold;
  }
  .square.black {
    background: gray;
  }
  .placeholder {
    cursor: url(whiteChecker.svg), default;
    cursor: url(blackChecker.svg), default;
  }
  .blackHeld {
    cursor: url(blackChecker.svg), default;
  }
  .checkers .wrapper {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }
</style>
